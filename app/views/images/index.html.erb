<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Photo</th>
      <th>Tag 1</th>
      <th>Tag 2</th>
      <th>Tag 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.address %></td>
        <td><%= image_tag image.photo.url(:small) %>       
        <td><%= image.latitude %></td>
        <td><%= image.longitude %></td>
        <td><%= image.tag_1 %></td>
        <td><%= image.tag_2 %></td>
        <td><%= image.tag_3 %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

